<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_color_bg" >

    <com.enjoy.nerd.view.PullToRefreshListView
        android:id="@+id/pull_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/transparent"
        android:divider="@drawable/item_divider_with_margin_left"
        android:fadingEdge="none"
        android:listSelector="@null"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/comm_scroller_bar"
        android:scrollbars="none"
        android:scrollingCache="false"
        />


</FrameLayout>